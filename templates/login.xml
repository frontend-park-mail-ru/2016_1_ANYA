<fest:template xmlns:fest="http://fest.mail.ru">
	<div class="header">
		<div class="header__appname">BloodyDefense</div>
	</div>
	<div class="main">
		<div class="main__name">Signing in</div>
		<form class="form" name="loginForm">
			<div class="form__username">
				<input type="text" class="form__input" placeholder="Username" />
			</div>
			<div class="form__password">
				<input type="password" class="form__input" placeholder="Password" />
			</div>
			<div class="buttons">
				<div class="buttons__button">
					<button type="submit">Submit</button>
				</div>
				<div class="buttons__button">
					<a href="#main">Back</a>
				</div>
			</div>
		</form>
	</div>
</fest:template>
