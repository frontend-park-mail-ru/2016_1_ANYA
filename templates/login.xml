<fest:template xmlns:fest="http://fest.mail.ru">
	<div class="header">
		<div class="header__appname">BloodyDefense</div>
	</div>
	<div class="main">
		<div class="main__name">Signing in</div>
		<form class="form" name="loginForm">
			<div class="form__username">
				<input type="text" class="form__username" placeholder="Username"></input>
			</div>
			<div class="form__password">
				<input type="password" class="form__password" placeholder="Password"></input>
			</div>
			<div class="buttons">
				<div class="buttons__button" onClick="document.forms['loginForm'].submit();">Submit</div>
				<div class="buttons__button" onClick="location.href='#main'">Back</div>
			</div>
		</form>
	</div>
</fest:template>
