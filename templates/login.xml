<fest:template xmlns:fest="http://fest.mail.ru">
	<fest:include src="./base_temp.xml"/>

	<fest:set name="input">
		<div class="form__{params.field}">
			<input name="{params.field}" type="{params.field}" class="form__input" placeholder="{params.field}"/>
			<span class='form__error'>No {params.field}!</span>
		</div>
	</fest:set>

	<div class="main">
		<div class="main__name">Signing in</div>
		<form class="form" name="loginForm">
			<fest:get name="input">{field: "username"}</fest:get>
			<fest:get name="input">{field: "password"}</fest:get>
			<div class="buttons">
				<div class="buttons__button">
					<button type="submit">Submit</button>
				</div>
				<div class="buttons__button">
					<a href="#main">Back</a>
				</div>
			</div>

		</form>

	</div>
</fest:template>
