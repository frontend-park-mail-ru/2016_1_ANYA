<fest:template xmlns:fest="http://fest.mail.ru">
	<fest:include src="./base_temp.xml"/>

	<div class="main">
		<div class="main__name">Signing in</div>
		<form class="form" name="loginForm">
			<div class="form__username">
				<input name="username" type="text" class="login form__input" placeholder="Username"/>
				<span class='error error_hidden'>No login!</span>
			</div>
			<div class="form__password">
				<input name="password" type="password" class="password form__input" placeholder="Password"/>
				<span class='error error_hidden'>No password!</span>
			</div>
			<div class="buttons">
				<div class="buttons__button">
					<button class="button_submit" type="submit">Submit</button>
				</div>
				<div class="buttons__button">
					<a href="#main">Back</a>
				</div>
			</div>

		</form>

	</div>
</fest:template>
